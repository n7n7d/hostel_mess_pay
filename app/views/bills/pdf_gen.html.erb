<% provide(:title,'Generate Receipt') %>

<div class="container">
  <div class="row">
    <div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
      <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6">
          <address>
            <strong>Hostel <%= current_user.resident.hostel %> Mess Management</strong>
            <br>
            Thapar university
            <br>
            Patiala, Punjab, IN 147001
            <br>
          </address>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 text-right">
          <p>
            <em>Period: <%=@bill.from_date%> to <%=@bill.to_date%> </em>
          </p>
        </div>
      </div>
      <div class="row">
        <div class="text-center">
          <h1>Receipt</h1>
        </div>
        </span>
        <table class="table table-hover">
          <thead>
          <tr>
            <th>Details</th>
            <th>#</th>
            <th class="text-center">Price</th>
            <th class="text-center">Total</th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td class="col-md-9"><em>Daily diet <i>(Subject to change)</i></em></h4></td>
            <td class="col-md-1" style="text-align: center"><%= (@bill.to_date-@bill.from_date).to_i %></td>
            <td class="col-md-1 text-center">&#8377;<%= current_user.resident.hostel.rate_card.daily_diet %></td>
            <td class="col-md-1 text-center">&#8377;<%= current_user.resident.hostel.rate_card.daily_diet * (@bill.to_date-@bill.from_date).to_i  %></td>

          </tr>
          <tr>
            <td class="col-md-9"><em>Establishment Charges</em></h4></td>
            <td class="col-md-1" style="text-align: center">-</td>
            <td class="col-md-1 text-center">&#8377;<%= current_user.resident.hostel.rate_card.establishment_charge %></td>
            <td class="col-md-1 text-center">&#8377;<%= current_user.resident.hostel.rate_card.establishment_charge %></td>
          </tr>
          <tr>
            <td class="col-md-9"><em>Maintenance Charges</em></h4></td>
            <td class="col-md-1" style="text-align: center">-</td>
            <td class="col-md-1 text-center">&#8377;<%= current_user.resident.hostel.rate_card.maintenance_charge %></td>
            <td class="col-md-1 text-center">&#8377;<%= current_user.resident.hostel.rate_card.maintenance_charge %></td>
          </tr>
          <tr>
            <td class="col-md-9"><em>Staff welfare charges</em></h4></td>
            <td class="col-md-1" style="text-align: center">-</td>
            <td class="col-md-1 text-center">&#8377;<%= current_user.resident.hostel.rate_card.staff_welfare_charge %></td>
            <td class="col-md-1 text-center">&#8377;<%= current_user.resident.hostel.rate_card.staff_welfare_charge %></td>
          </tr>
          <tr>
            <td class="col-md-9"><em>Extra/miscellaneous charges</em></h4></td>
            <td class="col-md-1" style="text-align: center">-</td>
            <td class="col-md-1 text-center">&#8377;<%= current_user.resident.hostel.rate_card.extra_charge %></td>
            <td class="col-md-1 text-center">&#8377;<%= current_user.resident.hostel.rate_card.extra_charge %></td>
          </tr>
          <tr>
            <td class="col-md-9"><em>Leaves</em></h4></td>
            <td class="col-md-1" style="text-align: center"><%= current_user.resident.account.leaves %></td>
            <td class="col-md-1 text-center">&#8377;10</td>
            <td class="col-md-1 text-center">&#8377; <%= 10 * current_user.resident.account.leaves %></td>
          </tr>
          <tr>
            <td class="col-md-9"><em>Fine</em></h4></td>
            <td class="col-md-1" style="text-align: center">-</td>
            <td class="col-md-1 text-center">&#8377; <%= current_user.resident.account.fine %></td>
            <td class="col-md-1 text-center">&#8377; <%=current_user.resident.account.fine %></td>
          </tr>
          <tr>
            <td>   </td>
            <td>   </td>
            <td class="text-right"><h4><strong>Total: </strong></h4></td>
            <td class="text-center text-danger"><h4><strong>&#8377;<%= @bill.amount%></strong></h4></td>
          </tr>
          </tbody>
        </table>
        <%= link_to(bill_pdf_path(@bill,format:"pdf"),id:"bubu")do %>
            <button type="button" class="btn btn-success btn-lg btn-block">
              Generate Receipt <span class="glyphicon glyphicon-chevron-right"></span>
            </button>
            </td>
        <%end%>
      </div>
    </div>
  </div>
</div>
